<!-- Posting section (Dashboard handlebar layout) -->
    <section class="card container mt-5">
        <form id="postForm">
        <div class=" mb-3">
            <label for="newPost" class="form-label fs-3">Create New Blog Post</label>
            <input type="title" class="form-control" id="blog-title" placeholder="your post title">
        </div>
        <div class="mt-3">
            <label for="exampleFormControlTextarea1" class="form-label fs-5">Write your post here!</label>
            </div>
            <textarea class="form-control" id="blog-text" rows="3" placeholder="Write about something new, educational, and challenging!"></textarea>
            <div class="d-flex justify-content-end">
                <button type="submit" class="btn px-4 my-3 mt-3 btn-success">Post</button>
                
            </div>    
        </div>
        </form>
    </section>